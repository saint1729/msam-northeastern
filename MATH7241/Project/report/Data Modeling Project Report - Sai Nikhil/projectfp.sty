%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% TITLE PAGE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\@ifclassloaded{memoir}
{
    \newcommand{\projectfrontpage}
    {
        \begin{titlingpage}
            \calccentering{\unitlength}
            \begin{adjustwidth*}{\unitlength}{-\unitlength}
                \printtitle
            \end{adjustwidth*}
        \end{titlingpage}
    }
}
{
    \newcommand{\projectfrontpage}
    {
        \begin{titlepage}
            \printtitle
        \end{titlepage}
    }
}

\newcommand{\printtitle}
{
    \renewcommand{\sfdefault}{phv}
    \sffamily
    \fontsize{15}{18pt}
    \selectfont
    \raggedright

    \vspace*{-5mm}
    \includegraphics{projectfp-images/Northeastern-logo.png}

    \vskip18mm

    \resizebox
    {
        \ifdim \width > \textwidth
            \textwidth
        \else
            \width
        \fi
    }{!}
    {%
        \ifdefined \authors
            \authors
        \else
            \@author
        \fi
    }

    \vskip6.5mm

    {
        \fontsize{20}{25pt}
        \selectfont
        \bfseries
        \boldmath
        \@title
        \par
    }

    \vskip17mm

    {
        \bfseries
        \csname PFP@course@\PFP@lang\endcsname
    }

    \vskip9mm
    
    \ifgeometry
    \else
        \csname PFP@supervisor@\PFP@lang\endcsname:
        \PFP@supervisor@name
    \fi

    \vfill

    \begin{minipage}[c][50mm]{28mm}
        \hspace*{1mm}
        \includegraphics[scale = 0.22]{figures/projectfp-images/AppliedMath-Logo.png}
    \end{minipage}%
    \begin{minipage}[c]{\textwidth - 28mm}
        \hfill
        \bfseries
        \the\year
    \end{minipage}
}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% SUPERVISOR %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\newcommand{\supervisor}[1]{\def\PFP@supervisor@name{#1}\checknextarg}
\newcommand{\checknextarg}
{
    \@ifnextchar{\bgroup}
    {
        \def\PFP@supervisor@eng{Supervisors}
        \def\PFP@supervisor@bm{Veiledere}
        \def\PFP@supervisor@nn{Rettleiarar}
        \gobblenextarg
    }{}
}
\newcommand{\gobblenextarg}[1]
{
    \@ifnextchar{\bgroup}
    {
        \g@addto@macro\PFP@supervisor@name{, #1}
        \gobblenextarg
    }
    {
        \g@addto@macro\PFP@supervisor@name
        { \csname PFP@and@\PFP@lang\endcsname\ #1}
    }
}
\newcommand{\PFP@supervisor@name}{}
\newcommand{\PFP@supervisor@eng}{Supervisor}
\newcommand{\PFP@supervisor@bm}{Veileder}
\newcommand{\PFP@supervisor@nn}{Rettleiar}
